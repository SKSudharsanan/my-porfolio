---
const { title, img, desc, emailSubject, url, badge, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
---

<div class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <div class="hero-content flex-col md:flex-row">
    {img && (
      <Image
        src={img}
        width={750}
        height={422}
        format="webp"
        alt={title}
        class="max-w-full md:max-w-[13rem] rounded-lg"
      />
    )}
    <div class="grow w-full">
      <h1 class="text-xl font-bold">
        {title}
        {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
      </h1>
      <ul class="list-disc pl-5">
        {desc.map(item => <li>{item}</li>)}
      </ul>
      <div class="card-actions justify-end mt-2">
        <a 
          href={`mailto:sudharsanan@thegeekstrategy.com?subject=${encodeURIComponent(emailSubject)}`}
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>
</div>
